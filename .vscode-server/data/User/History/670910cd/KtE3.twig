{% block body %}
<div class="edit_container">
    {% if msg %}
        <div class="success">{{ msg }}</div>
    {% endif %}
    <form action="readmore.php" method="POST">
        <div class="edit_title">
            <input type="text" id="nom_intervention" name="nom_intervention" value="{{ oneint.nom_intervention }}" readonly>
        </div>

        <div class="edit_body">
            <textarea id="details_intervention" name="details_intervention" readonly>{{ oneint.details_intervention|replace({'<br>': "\n"}) }}</textarea>
        </div>

        <div class="select">
        <select>
        <option selected disabled>Choisissez un degré d'uregence</option>
        {% for urgence in urgences %}
        <option value="">Choix 1</option>
        {% endfor %}
        </select>
        </div>

        <input type="hidden" name="add_int_id" value="{{ oneint.id_intervention }}">
        <button type="submit" name="Add" class="edit_button">AJOUTER</button>
    </form>

</div>
<img class="logo" src='images/Logo.jpg'>
{% endblock %}
{% block body %}
<div class="edit_container">
    {% if msg %}
        <div class="success">{{ msg }}</div>
    {% endif %}
    <form action="urgences.php" method="POST">
        <div class="edit_title">
            <input type="text" id="urgence" name="urgence" placeholder ="Urgence...." required>
        </div>
        
        <button type="submit" name="add" class="edit_button">ADD</button>
    </form>
</div>

<ul class="ul1">
    {% for urgence in urgences %}
    <li>{{ urgence.deg_urgence }}
        <div class="es">
            <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer l'Urgence?')" href='urgences.php?delete_id={{ urgence.id_urgence}}' class="supp"><img src='images/supp.png' width="40"></a>
        </div>
    </li>
    {% endfor %}
</ul>
<img class="logo" src='images/Logo.jpg'>
{% endblock %}

{% block body %}
<div class="edit_container">
    {% if msg %}
        <div class="success">{{ msg }}</div>
    {% endif %}
    <form action="edit.php" method="POST">
        <div class="edit_title">
            <input type="text" id="nom_intervention" name="nom_intervention" value="{{ oneint.nom_intervention }}">
        </div>

        <div class="edit_body">
            <textarea id="details_intervention" name="details_intervention">{{ oneint.details_intervention|replace({'<br>': "\n"}) }}</textarea>
        </div>
        <input type="hidden" name="edit_id" value="{{ oneint.id_intervention }}">
        <button type="submit" name="edit" class="edit_button">Enregistrer</button>
    </form>
</div>
<img class="logo" src='images/Logo.jpg'>
{% endblock %}
